{
    "manifest_version": 3,
    "name": "Advanced Tab Management Tool",
    "short_name": "TabManager",
    "description": "An extension that organizes tabs intelligently, grouping them by topic or urgency.",
    "version": "1.0.0",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "tabs",
      "storage",
      "scripting",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png"
      }
    },
    "options_page": "options.html",
    "host_permissions": [
      "<all_urls>"
    ]
  }